@model WebApplication5.Models.ViewModels.LoginViewModel 
@{

}

<link href="~/css/cssForLogin.css" rel="stylesheet" />
<div class="wrapper fadeInDown">
    <div id="formContent">
        <div class="fadeIn first ">
            <img src="https://cdn.iconscout.com/icon/free/png-256/user-1648810-1401302.png" id="icon" alt="User Icon" />
        </div>

        <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl">
        @Html.TextBoxFor(x => x.UserName, new { @class = "fadeIn second", placeholder = "name", required = "required" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control m-auto bg-light border-0",
       style = "width:85%; text-align: center;  ",
       placeholder = "password",pattern = "^(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^&*-]).{7,}$",
       required = "required",
       title = "Minimum of 8 characters. Should have at least one special character and one number."})
        <input type="submit" class="fadeIn fourth" value="Login">
        </form>

        <div id="formFooter">
            <a class="underlineHover d-block"  asp-action="ForgotPassword">Forgot Password?</a>
            <a class="underlineHover"  asp-action="Register">Register</a>
        </div>

    </div>
</div>
