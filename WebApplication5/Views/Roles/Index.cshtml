@model List<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="bg-dark" style="margin:0px!important;">
    <div class="bg-dark d-flex justify-content-between" style="padding:20px;">
        <a href="~/Admin/index" style="margin:2px;" class="btn btn-primary">Goods</a>
        <a class="btn btn-primary d-block"  asp-action="UserList">User list</a>
        <a class="btn btn-primary d-block" asp-action="Create">New role</a>
        <a href="~/User/index" style="margin:2px;" class="btn btn-primary">Users admin panel </a>
    </div>
    <table class="table table-dark table-hover" style="margin:0px">
        <thead>
            <tr>

                <th scope="col"></th>
                <th scope="col">#</th>
                <th scope="col"></th>
                <th scope="col">Role name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {

                <tr>
                    <td></td>
                    <th scope="row">@i</th>
                    <td></td>
                    <td>@Model[i].Name</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@Model[i].Id">
                            <input type="submit" class="btn btn-outline-danger" value="Delte" />
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>




</div>


