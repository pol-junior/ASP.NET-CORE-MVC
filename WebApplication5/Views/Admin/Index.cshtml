@model IEnumerable<WebApplication5.Models.Bicycle>
@*
*@
@{
    <div class="bg-dark d-flex justify-content-between" style="padding:20px;">
        <a href="~/User/Index" style="margin:2px;" class="btn btn-primary">Users</a>
        <a class="btn btn-primary d-block"  href="~/Admin/Create">New good</a>
        <a href="~/Roles/Index" style="margin:2px;" class="btn btn-primary">Roles</a>
    </div>
    <table class="table table-dark table-hover" style="padding:0px; margin:0px;">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Wheel diameter</th>
                <th scope="col">Weight</th>
                <th scope="col">Frame size</th>
                <th scope="col">Gears quantity</th>
                <th scope="col">Manufacture</th>
                <th scope="col">Picture</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.WheelDiameter</td>
                    <td>@item.Weight</td>
                    <td>@item.FrameSize</td>
                    <td>@item.GearsQuantity</td>
                    <td>@item.Mnufacture</td>
                    <td><img style="height:20px;" src="@item.IamgeUrl" /></td>
                    <td>
                        <a class="btn btn-outline-warning" href="~/Admin/Create/@item.BicycleID">Edit</a>
                    </td>
                    <td>
                        <form method="post" action="~/Admin/Delete/@item.BicycleID">
                            <input type="submit" class="btn btn-outline-danger" value="Delete" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
